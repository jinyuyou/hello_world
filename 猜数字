import random
number = random.randint(1,10)
print('----猜数字游戏----')
i = 0
while i < 3:
    temp = input('输入你猜的数字:')
    guess = int(temp)
    if guess == number:
        print('猜对了，厉害厉害')
        print('但是没有奖励')
        break
    else:
        if guess > number:
            print('太大了')
        else:
            print('太小了')
        print('你还有%d'%(2-i)+'次机会')
    i = i + 1
print('游戏结束')
